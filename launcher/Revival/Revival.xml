  <modification>
    <title>Purchasable Retrainers</title>
    <version>2.0</version>
    <author>The Revival Team</author>
    <description>Allows retrainers to be purchased from all vendors.</description>
    <url>http://www.hellgateaus.net</url>
    <type>optional</type>
    <pack id="default">
      <file id="items.txt.cooked">
        <modify>
          <entity id="Attribute_Retrainer">
            <attribute id="BuyPriceMult">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="BuyPriceAdd">
              <replace>
                <data>500,000</data>
              </replace>
            </attribute>
            <attribute id="SellPriceMult">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="SellPriceAdd">
              <replace>
                <data>500,000</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Skill_Retrainer">
            <attribute id="BuyPriceMult">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="BuyPriceAdd">
              <replace>
                <data>750,000</data>
              </replace>
            </attribute>
            <attribute id="SellPriceMult">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="SellPriceAdd">
              <replace>
                <data>750,000</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="treasure.txt.cooked">
        <modify>
          <entity id="Vendor_Wares">
            <attribute id="Item6">
              <replace>
                <data>123</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
    </pack>
  </modification>
  <modification>
    <title>Auto Pickup Items</title>
    <version>2.0</version>
    <author>The Revival Team</author>
    <description>Allows consumables &amp; quest items to be automatically picked up.</description>
    <url>http://www.hellgateaus.net</url>
    <type>optional</type>
    <pack id="default">
      <file id="items.txt.cooked">
        <modify>
          <entity id="*">
            <attribute id="StackSize">
              <replace>
                <data></data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
    </pack>
  </modification>
</revival>