  <modification>
    <title>Revival SP modification</title>
    <version>2.0</version>
    <author>The Revival Team</author>
    <description>This is the base SP modification developed by the Revival team.</description>
    <url>http://www.hellgateaus.net</url>
    <type>required</type>
    <pack id="hellgate000">
      <file id="gameglobals.txt.cooked">
        <modify>
          <entity id="MaxLuckTugboat" value="55">
            <attribute id="IntValue">
              <replace>
                <data>10000</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="item_levels.txt.cooked">
        <modify>
          <entity id="*">
            <attribute id="AugmentCostRare">
              <divide>
                <data>2</data>
              </divide>
            </attribute>
            <attribute id="AugmentCostLegendary">
              <divide>
                <data>2</data>
              </divide>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="itemquality.txt.cooked">
        <modify>
          <entity id="Legendary" value="3">
            <attribute id="VendorRarity">
              <replace>
                <data>4</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Mutant" value="4">
            <attribute id="ExtraScrapQuality">
              <replace>
                <data>4</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Unique" value="5">
            <attribute id="VendorRarity">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="Price_Multiplier">
              <replace>
                <data>21</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="recipes.txt.cooked">
        <modify>
          <!--ENABLE CRAFTING RECIPES-->
          <entity id="*" value="1-18">
            <attribute id="AlwaysKnown">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="CubeRecipe">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
          </entity>
          <!--ENABLE CONSUMABLE RECIPES-->
          <entity id="*" value="42-79">
            <attribute id="AlwaysKnown">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="CubeRecipe">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
          </entity>
          <!--HIDE BROKEN PET RECIPES-->
          <entity id="*" value="80-82">
            <attribute id="CubeRecipe">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
          </entity>
          <!-- fixing conflicting recipes-->
          <entity id="gloves" value="11">
            <attribute id="ingredient4ItemQuality">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
          </entity>
          <entity id="torso" value="15">
            <attribute id="ingredient5ItemQuality">
              <replace>
                <data>2</data>
              </replace>
            </attribute>
          </entity>
          <entity id="shield" value="16">
            <attribute id="ingredient5ItemQuality">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
          </entity>
          <entity id="focus_item" value="17">
            <attribute id="ingredient5ItemQuality">
              <replace>
                <data>2</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="treasure.txt.cooked">
        <modify>
          <!--MUTANT ITEMS DROP 1/10 CHANCE-->
          <entity id="Beast_of_Abbadon_Loot" value="364">
            <attribute id="NoDrop">
              <replace>
                <data>90</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Fiend_Loot" value="331">
            <attribute id="NoDrop">
              <replace>
                <data>90</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="inventory.txt.cooked">
        <modify>
          <entity id="Inventory" value="10">
            <attribute id="height">
              <replace>
                <data>24</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Stash" value="26">
            <attribute id="height">
              <replace>
                <data>100</data>
              </replace>
            </attribute>
          </entity>
          <entity id="merchant_buyback" value="47">
            <attribute id="height">
              <replace>
                <data>10</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Cube" value="55">
            <attribute id="playerPutRestricted">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="playerTakeRestricted">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="statsfunc.txt.cooked">
        <modify>
          <entity id="Strength_Bonus_Damage" value="21">
            <attribute id="formula">
              <replace>
                <data>strength * 3</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="quest.txt.cooked">
        <modify>
          <entity id="Cube" value="245">
            <attribute id="nameStringKey">
              <replace>
                <data>7999</data>
              </replace>
            </attribute>
            <attribute id="subscriberOnly">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
            <attribute id="castGiver">
              <replace>
                <data>208</data>
              </replace>
            </attribute>
            <attribute id="descriptionDialog">
              <replace>
                <data>1740</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="loading.dds">
        <replace>
          <data>data\uix\loading.dds</data>
        </replace>
      </file>
      <file id="nonwsloading.dds">
        <replace>
          <data>data\uix\nonwsloading.dds</data>
        </replace>
      </file>
      <file id="main_new_atlas.dds">
        <replace>
          <data>data\uix\main_new_atlas.dds</data>
        </replace>
      </file>
      <file id="inventory_screen.xml">
        <replace>
          <data>data\uix\xml\inventory_screen.xml</data>
        </replace>
      </file>
    </pack>
  </modification>
