<?xml version="1.0" encoding="utf-8" ?>
<revival xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="Schema.xsd">
  <modification>
    <title>Revival SP modification</title>
    <version>2.0</version>
    <author>The Revival Team</author>
    <description>This is the base SP modification developed by the Revival team.</description>
    <url>http://www.hellgateaus.net</url>
    <type>required</type>
    <pack id="default">
      <file id="gameglobals.txt.cooked">
        <modify>
          <entity id="MaxLuckTugboat" value="55">
            <attribute id="IntValue">
              <replace>
                <data>10000</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="item_levels.txt.cooked">
        <modify>
          <entity id="*">
            <attribute id="AugmentCostRare">
              <divide>
                <data>2</data>
              </divide>
            </attribute>
            <attribute id="AugmentCostLegendary">
              <divide>
                <data>2</data>
              </divide>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="itemquality.txt.cooked">
        <modify>
          <entity id="Legendary" value="3">
            <attribute id="VendorRarity">
              <replace>
                <data>4</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Mutant" value="4">
            <attribute id="ExtraScrapQuality">
              <replace>
                <data>4</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Unique" value="5">
            <attribute id="VendorRarity">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="Price_Multiplier">
              <replace>
                <data>21</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="items.txt.cooked">
        <modify>
          <!--UNLOCK SUBSCRIBER & MULTIPLAYER ITEMS, REMOVE NO TRADE-->
          <entity id="*">
            <attribute id="Bitmask02">
              <bitwise id="SubscriberOnly">
                <switch>0</switch>
              </bitwise>
            </attribute>
            <attribute id="Bitmask05">
              <bitwise id="NoTrade">
                <switch>0</switch>
              </bitwise>
            </attribute>
            <attribute id="Bitmask06">
              <bitwise id="MultiplayerOnly">
                <switch>0</switch>
              </bitwise>
            </attribute>
          </entity>
          <!--SKILL RETRAINER-->
          <entity id="Skill_Retrainer" value="15">
            <attribute id="Quality">
              <replace>
                <data>5</data>
              </replace>
            </attribute>
            <attribute id="Bitmask05">
              <bitwise id="NoDrop">
                <switch>1</switch>
              </bitwise>
            </attribute>
          </entity>
          <!--ATTRIBUTE RETRAINER-->
          <entity id="Attribute_Retrainer" value="265">
            <attribute id="Quality">
              <replace>
                <data>5</data>
              </replace>
            </attribute>
            <attribute id="Bitmask05">
              <bitwise id="NoDrop">
                <switch>1</switch>
              </bitwise>
            </attribute>
          </entity>
          <!--MANTRAWRAITH, ZOMBOT AND COKOMOKO-->
          <entity id="*" value="178-183">
            <attribute id="Bitmask05">
              <bitwise id="NoDropExceptForDuplicates">
                <switch>1</switch>
              </bitwise>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="recipes.txt.cooked">
        <modify>
          <!--ENABLE CRAFTING RECIPES-->
          <entity id="*" value="1-18">
            <attribute id="AlwaysKnown">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="CubeRecipe">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
          </entity>
          <!--ENABLE CONSUMABLE RECIPES-->
          <entity id="*" value="42-79">
            <attribute id="AlwaysKnown">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
            <attribute id="CubeRecipe">
              <replace>
                <data>1</data>
              </replace>
            </attribute>
          </entity>
          <!--HIDE BROKEN PET RECIPES-->
          <entity id="*" value="80-82">
            <attribute id="CubeRecipe">
              <replace>
                <data>0</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="treasure.txt.cooked">
        <modify>
          <!--MUTANT ITEMS DROP 1/10 CHANCE-->
          <entity id="Beast_of_Abbadon_Loot" value="364">
            <attribute id="NoDrop">
              <replace>
                <data>90</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Fiend_Loot" value="331">
            <attribute id="NoDrop">
              <replace>
                <data>90</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="inventory.txt.cooked">
        <modify>
          <entity id="Inventory" value="10">
            <attribute id="Height">
              <replace>
                <data>24</data>
              </replace>
            </attribute>
          </entity>
          <entity id="Stash" value="26">
            <attribute id="Height">
              <replace>
                <data>100</data>
              </replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="loading.dds">
        <replace>
          <data>data\uix\loading.dds</data>
        </replace>
      </file>
      <file id="nonwsloading.dds">
        <replace>
          <data>data\uix\nonwsloading.dds</data>
        </replace>
      </file>
      <file id="main_new_atlas.dds">
        <replace>
          <data>data\uix\main_new_atlas.dds</data>
        </replace>
      </file>
      <file id="inventory_screen.xml">
        <replace>
          <data>data\uix\xml\inventory_screen.xml</data>
        </replace>
      </file>
    </pack>
  </modification>
