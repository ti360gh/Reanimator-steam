<?xml version="1.0" encoding="utf-8" ?>
<revival xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ModSchema.xsd">
  <modification>
    <title>Revival SP modification</title>
    <version>2.0</version>
    <description>This is the base SP modification developed by the Revival team.</description>
    <url>http://www.hellgateaus.net</url>
    <type>required</type>
    <pack id="Default">
      <file id="Game_Globals">
        <modify>
          <entity id="MaxLuckTugboat" value="55">
            <attribute id="IntValue">
              <replace>10000</replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="ItemLevels">
        <modify>
          <entity id="*">
            <attribute id="AugmentCostRare">
              <divide>2</divide>
            </attribute>
            <attribute id="AugmentCostLegendary">
              <divide>2</divide>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="ItemQuality">
        <modify>
          <entity id="Legendary" value="3">
            <attribute id="VendorRarity">
              <replace>4</replace>
            </attribute>
          </entity>
          <entity id="Mutant" value="4">
            <attribute id="ExtraScrapQuality">
              <replace>4</replace>
            </attribute>
          </entity>
          <entity id="Unique" value="5">
            <attribute id="VendorRarity">
              <replace>1</replace>
            </attribute>
            <attribute id="PriceMultiplier">
              <replace>21</replace>
            </attribute>
          </entity>
        </modify>
      </file>
      <file id="Items">
        <modify>
          <entity id="SkillRetrainer" value="15">
            <attribute id="Quality">
              <replace>5</replace>
            </attribute>
          </entity>
        </modify>
      </file>
    </pack>
  </modification>
  <modification>
    <title>Elite for normal mode</title>
    <version>2.0</version>
    <description>Reduces elite mode characters difficulty to normal mode, while benefiting from additional multipliers.</description>
    <url>http://www.hellgateaus.net</url>
    <type>optional</type>
    <pack id="Default">
      <file id="GameGlobals">
        <modify>
          <entity id="EliteMonsterDamagePercent">
            <attribute id="FloatData">
              <replace>0</replace>
            </attribute>
          </entity>
          <entity id="elite_monster_sfx_chance_percent">
            <attribute id="floatData">
              <replace>0</replace>
            </attribute>
          </entity>
          <entity id="elite_player_damage_percent">
            <attribute id="floatData">
              <replace>0</replace>
            </attribute>
          </entity>
          <entity id="elite_player_sfx_chance_percent">
            <attribute id="floatData">
              <replace>0</replace>
            </attribute>
          </entity>
        </modify>
      </file>
    </pack>
  </modification>
</revival>